@model CarHire.WebUI.Models.CarsListViewModel

@{
    ViewBag.Title = "Samochody";
}

@using (Html.BeginForm())
{
    <h3>Wyszukiwanie</h3>
    <div>Model: 
    <div><input type="text" name="NameSearch"></div></div>
    <div>Marka: 
    <div><input type="text" name="BrandSearch"></div></div>
    <input type="checkbox" name="Hired" value="true"><text>Szukaj tylko dostepnych</text><br/>
    <input type="submit" value = "Szukaj" />
}
<br />@Html.ActionLink("Wyszukiwanie zaawansowane", "Search")<br /><br />

@foreach (var p in Model.Cars)
{
    @Html.Partial("CarSummary", p);
}

<div class="btn-group pull-right">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x }))
</div>