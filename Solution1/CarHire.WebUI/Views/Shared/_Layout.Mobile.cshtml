<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet"
          href="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.css" />
    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div data-role="page" id="page1">
        <div data-theme="a" data-role="header" data-position="fixed">
            <a class="navbar-brand" href="~/">
                <h3>Wypożyczalnia somochodów</h3>
                </a>
                @if (Session["LogedUserID"] != null)
            {
                    @Html.ActionLink("Wyloguj", "Logout", "Home", null, new { @class = "pull-right label label-danger" })
                }
                else {
                    @Html.ActionLink("Rejestracja", "SignIn", "Users", null, new { @class = "pull-right label label-info" })
                    @Html.ActionLink("Logowanie", "Login", "Home", null, new { @class = "pull-right label label-success" })
                }
                @Html.Action("Menu", "Nav")
</div>
        <div data-role="content">
            <ul data-role="listview" data-divider-theme="b" data-inset="false">
                @RenderBody()
            </ul>
        </div>
    </div>
</body>
</html>
